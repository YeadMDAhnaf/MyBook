<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mybooklist"
    android:background="@drawable/back1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="300dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117"
        app:srcCompat="@drawable/logoo1" />

    <!-- TextView for the message -->
    <TextView
        android:id="@+id/delete_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Product Image to Delete"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_add_photo_alternate_24"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView to display the list of books -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="240dp"
        android:id="@+id/recycler_my_books"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
