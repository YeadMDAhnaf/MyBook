<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- PDF Icon -->
        <ImageView
            android:id="@+id/pdf_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:tint="#6200EE"
            android:src="@drawable/baseline_picture_as_pdf_24" />

        <!-- PDF Name -->
        <TextView
            android:id="@+id/pdf_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pdf_icon"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@+id/view_pdf_button"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Sample PDF Name"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- View Button to Open PDF -->
        <Button
            android:id="@+id/view_pdf_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:backgroundTint="#6200EE"
            android:text="View"

            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:letterSpacing="0"
            android:textStyle="normal" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
